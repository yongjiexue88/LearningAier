rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Top-level collections (current app structure)
    match /folders/{folderId} {
      allow read, write: if isAuthenticated();
    }
    
    match /notes/{noteId} {
      allow read, write: if isAuthenticated();
    }
    
    match /flashcards/{flashcardId} {
      allow read, write: if isAuthenticated();
    }
    
    match /flashcard_reviews/{reviewId} {
      allow read, write: if isAuthenticated();
    }
    
    match /pomodoro_tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /pomodoro_sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
    }
    
    match /whiteboards/{whiteboardId} {
      // Allow authenticated users full access to whiteboards
      // Document IDs are structured as ${userId}_${noteId} or ${userId}_default
      // This ensures users can only access their own whiteboards via the ID pattern
      allow read, write: if isAuthenticated();
    }
    
    match /documents/{documentId} {
      allow read, write: if isAuthenticated();
    }
    
    match /note_versions/{versionId} {
      allow read, write: if isAuthenticated();
    }

    // Users collection (for subcollection pattern, if needed)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Subcollections for user data
      match /notes/{noteId} {
        allow read, write: if isOwner(userId);
      }
      match /flashcards/{flashcardId} {
        allow read, write: if isOwner(userId);
      }
      match /folders/{folderId} {
        allow read, write: if isOwner(userId);
      }
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
      }
      match /preferences/{prefId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Allow access to user_preferences collection if documents are keyed by userId
    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Profiles collection - keyed by userId
    match /profiles/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
